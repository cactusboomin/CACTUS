@model EditItemViewModel

<div id="main">
    <div class="inner">

        <div>
            <h2>EDIT TITLE</h2>
            <form asp-area=""
                  asp-controller="Items"
                  asp-action="EditTitle" method="post">

                <input type="hidden" asp-for="@Model.ItemId" />

                <div asp-validation-summary="All"></div>
                <div>
                    <h2><label asp-for="@Model.Title"></label></h2>
                    <input asp-for="@Model.Title" />
                    <span asp-validation-for="@Model.Title"></span>
                </div>

                <div>
                    <input type="submit" value="EDIT" />
                </div>
            </form>
        </div>

    </div>
</div>
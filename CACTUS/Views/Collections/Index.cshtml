@model CollectionsViewModel

<div>
    <h1>
        COLLECTIONS
    </h1>

    <h2>
        SORT BY:
        <a asp-action="Index" asp-route-sortOrder="@ViewBag.CollectionNameSort">TITLE</a>
        <a asp-action="Index" asp-route-sortOrder="@ViewBag.CollectionDateSort">DATE</a>
    </h2>   

    <div>
        <section class="tiles">
            @foreach (var c in Model.Collections)
            {
                <article class="style3">
                    <span class="image">
                        @if (c.TitleImagePath == null)
                        {
                            <img src="~/images/empty.jpg" alt="" />
                        }
                        else
                        {
                            <img src="@c.TitleImagePath" alt="" />
                        }
                    </span>
                    <a asp-controller="Collections"
                       asp-action="Collection"
                       asp-route-id="@c.Id">
                        <h2>@c.Title</h2>
                        <div class="content">
                            <p>@c.Theme</p>
                        </div>
                    </a>
                </article>
            }
        </section>
    </div>
</div>
